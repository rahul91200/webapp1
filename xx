#include<stdio.h>

int main()
{
	int a,b,c,d;
	int i,j,k,l;
	for(i=0;i<=5;i++)
	{
		for(j=5;j>=i;j--)
		{
			printf(" ");
		}
		for(k=i;k>=0;k--)
		{
			printf("%d",i);
		}
		for(l=1;l<=i;l++)
		{
			printf("%d",i);
		}
		printf("\n");
	}
	for(a=4;a>=0;a--)
	{
		for(b=a;b<=5;b++)
		{
			printf(" ");
		}
		for(c=a;c>=0;c--)
		{
			printf("%d",a);
		}
		for(d=0;d<a;d++)
		{
			printf("%d",a);
		}
		printf("\n");
	}
}
